<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<HBox fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="0"
      style="-fx-background-color: black;">

    <Pane prefWidth="300" prefHeight="510">
        <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
        <BorderPane styleClass="gameBoard" fx:id="gameBoard">
            <center>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
            </center>
        </BorderPane>

        <Group fx:id="groupNotification" layoutX="14" layoutY="203">
            <VBox alignment="CENTER">
                <GameOverPanel fx:id="gameOverPanel"/>
            </VBox>
        </Group>

        <stylesheets>
            <URL value="@window_style.css"/>
        </stylesheets>
    </Pane>

    <!-- Right side: New info panel -->
    <VBox spacing="20"
          style="-fx-background-color: #1a1a1a; -fx-padding: 20;"
          prefWidth="180"
          alignment="TOP_CENTER">

        <!--right size for panel to show the block coming next -->
        <VBox spacing="8" alignment="CENTER">
            <Label text="NEXT"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Pane style="-fx-background-color: #0a0a0a; -fx-padding: 15;">
                <GridPane fx:id="nextPiecePanel"
                          hgap="2" vgap="2"
                          alignment="CENTER">
                </GridPane>
            </Pane>
        </VBox>

        <!-- Score display -->
        <VBox spacing="8" alignment="CENTER">
            <Label text="SCORE"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label fx:id="scoreLabel" text="0"
                   style="-fx-text-fill: #00ff00; -fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'digital';"/>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>

        <!-- control buttons -->
        <VBox spacing="12" alignment="CENTER">
            <Button fx:id="pauseButton" text="PAUSE"
                    onAction="#pauseGame"
                    prefWidth="140"
                    prefHeight="40"
                    style="-fx-background-color: #4a9eff;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 5;
                           -fx-cursor: hand;"/>

            <Button fx:id="restartButton" text="RESTART"
                    onAction="#newGame"
                    prefWidth="140"
                    prefHeight="40"
                    style="-fx-background-color: #ff4a4a;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 5;
                           -fx-cursor: hand;"/>
        </VBox>

    </VBox>

</HBox>